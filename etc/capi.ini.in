[couchdb]
max_dbs_open = 10000

[httpd]
db_frontend = capi_frontend
bind_address = 0.0.0.0

[httpd_global_handlers]
_cluster_tasks = {capi_tasks, cluster_tasks_req}

[httpd_db_handlers]
_all_docs = {capi_view, all_docs_db_req}
_random = {capi_frontend, handle_random_req}

[httpd_design_handlers]
_view = {capi_view, handle_view_req}

[database_compaction]
doc_buffer_size = 2097152
checkpoint_after = 20971520

[daemons]
; Started by ns_server's supervision trees.
compaction_daemon =
replication_manager =

[compaction_daemon]
check_interval = 60
min_file_size = 131072

[compactions]
_default = [{db_fragmentation, "80%"}, {view_fragmentation, "80%"}]
